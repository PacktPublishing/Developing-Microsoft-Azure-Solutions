@model UploadViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Upload an image:</h1>
    <p>Learn about <a href="https://www.packtpub.com/product/learning-asp-net-core-mvc-programming/9781786463838">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="row">
    <div class="w-75 mx-auto">
        @using (Html.BeginForm("Index", "Home",
                               FormMethod.Post,
                               new { id = "FileUploadForm",
                                     @class = "col-xs-12 w-75 mx-auto",
                                     enctype = "multipart/form-data"}))
        {
            <div class="form-group">
                <div class="custom-file">
                    <label id="imageUploadLabel" for="imageUpload" class="custom-file-label">Choose File...</label>
                    <input id="imageUpload" onchange="updatefile(this);" accept="image/jpeg,image/png" asp-for="Upload.Image" type="file" class="form-control-file custom-file-input" required>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                    <span asp-validation-for="Upload.Image" class="text-danger"></span>
                </div>
            </div>
        }
    </div>
</div>
<div class="text-center">
    <p>Only upload JPEG (.jpg|.jpeg) or PNG (.png) files are accepted.</p>
</div>

<script type="text/javascript" src="~/js/filechange.js"></script>
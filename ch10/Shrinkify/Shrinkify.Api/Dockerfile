#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:5.0-buster-slim AS base
RUN apt-get update
RUN apt-get upgrade -y
RUN apt install -y webp curl wget
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim AS build
WORKDIR /src
COPY ["Shrinkify/Shrinkify.csproj", "Shrinkify/"]
RUN dotnet restore "Shrinkify/Shrinkify.csproj"
COPY . .
WORKDIR "/src/Shrinkify"
RUN dotnet build "Shrinkify.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Shrinkify.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Shrinkify.dll"]